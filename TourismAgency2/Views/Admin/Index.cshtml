@model IEnumerable<TourismAgency2.Models.Offer>
@{
    ViewBag.Title = "Index";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Edit Offers</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th class="text-center">Destinacion</th>
                <th class="text-center">Seasons</th>
                <th class="text-right">Price</th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.OfferId</td>
                    <td>@Html.ActionLink(item.OfferName, "Edit", new { item.OfferId })</td>
                    <td class="text-left">@item.Destination</td>
                    <td class="text-center">@item.Seasons</td>
                    <td class="text-right">@item.Price.ToString("c")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                {
                            @Html.Hidden("OfferId", item.OfferId)
                            <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer text-center">
        @Html.ActionLink("Add a new product", "New", null, new { @class = "btn btn-default" })
    </div>
</div>