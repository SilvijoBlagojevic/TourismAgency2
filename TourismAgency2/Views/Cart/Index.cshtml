@model TourismAgency2.Models.CartIndexViewModel

@{
    ViewBag.Title = "Your Cart";
}

<h2>Your cart</h2>
<table class="table">
    <thead>
        <tr>
            <th>Quantity</th>
            <th>Item</th>
            <th>Destination</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td class="text-left">@line.Quantity</td>                
                <td class="text-left">@line.Offer.OfferName</td>
                <td class="text-left">@line.Offer.Destination</td>
                <td class="text-right">@line.Offer.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Quantity * line.Offer.Price).ToString("c"))
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-right">Total:</td>
            <td class="text-right">
                @Model.Cart.ComputeTotalVaue().ToString("c")
            </td>
        </tr>
    </tfoot>
</table>
<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue shopping</a>
    @Html.ActionLink("Checkout now", "Checkout", null, new { @class = "btn btn-primary" })
</div>